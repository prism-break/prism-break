body
  max-width 1200px

  &.categories.show
    #container
      .content-side
        w 192px !important
        position fixed
        top x*2 + 44px
        margin-left 1008px
        bg #fff
        z-index 100
      .content-main
        w 1008px
        .box
          mb 3em

  .sections
    clearfix()

    .section

      &.prop
        bl none
        w 25%
        fr()

        &.empty
          d block

      .pipe
        i.fa
          d none

      .bar
        w 100% !important
        float none
        br none
        .label
          s 80%

      .filler-columns-two
        d none

  .align-left
    fr()
    w 75%
