extends layouts/application
include layouts/mixins

block title
  = t['site-title']

block content

  .content-side
    .text-block.large!= h.marked(t['site-introduction'])

  .content-main
    each platformType in platformTypes

      .section
        .pipe(title=t[platformType.name])= t[platformType.name]

        .bars
          each category in platformType.categories
            a.bar(href=`./categories/${category.slug}`)
              .label
                if category.fa === 'fa-mobile'
                  i(class=`fa ${category.fa} large`)
                else
                  i(class=`fa ${category.fa}`)
                if category.name == "Routers" || category.name == "Servers" || category.name == "Web Services"
                  = t[category.name]
                else
                  = category.name
              .icon
                i.fa.fa-angle-right.ltr
                i.fa.fa-angle-left.rtl
